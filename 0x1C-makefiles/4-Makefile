CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
	NAME = school
	RM = rm -f
	CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
		$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c
		$(CC) $(CFLAGS) -c $< -o $@

clean:
		$(RM) *~ $(NAME)

oclean: clean
		$(RM) $(OBJ)

fclean: oclean
		$(RM) $(NAME)

re: fclean all
